<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>Employee Task Tracking Application</display-name>
	<!-- Welcome File -->
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
	<!-- Servlet Definitions -->
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.employee.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>RegisterEmployeeServlet</servlet-name>
		<servlet-class>com.employee.servlet.RegisterEmployeeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegisterEmployeeServlet</servlet-name>
		<url-pattern>/registerEmployee</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ManageEmployeeServlet</servlet-name>
		<servlet-class>com.employee.servlet.ManageEmployeeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ManageEmployeeServlet</servlet-name>
		<url-pattern>/manageEmployees</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ViewTasksServlet</servlet-name>
		<servlet-class>com.employee.servlet.ViewTasksServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ViewTasksServlet</servlet-name>
		<url-pattern>/viewTasks</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AddTaskServlet</servlet-name>
		<servlet-class>com.employee.servlet.AddTaskServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AddTaskServlet</servlet-name>
		<url-pattern>/addTask</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ManageTaskServlet</servlet-name>
		<servlet-class>com.employee.servlet.ManageTaskServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ManageTaskServlet</servlet-name>
		<url-pattern>/manageTasks</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>FetchTaskDataServlet</servlet-name>
		<servlet-class>com.employee.servlet.FetchTaskDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FetchTaskDataServlet</servlet-name>
		<url-pattern>/viewCharts</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>com.employee.servlet.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
</web-app>
